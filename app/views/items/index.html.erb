<%= render "shared/header" %>


<body class="shares_body">
  <h1 class="share_title">SHARE YOUR RECOMMENDATION FOR CUTIES </h1>
  <div class="share_btn_wrapper">
    <%= link_to "◎ おすすめを投稿する ◎", new_item_path, class:"share_btn" %>
  </div>

    <% @items.each do |item| %>
      <ul>
        <%= link_to item_path(item), method: :get do %>
          <li class="recommended_title">Title:  <%= item.item_title %><span class="share_comment_time">  (<%= item.created_at.to_s(:datetime_jp) %>)</span></li>
          <li class="recommended_text"><%= item.item_text %></li>
        <% end %>
      </ul>
    <% end %>
  <%= paginate @items %>

    <div class="top_page_link">
      <%= link_to "トップページに戻る", "/" %>
    </div>
</body>


<%= render "shared/footer" %>