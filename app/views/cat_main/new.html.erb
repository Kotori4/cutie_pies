<%= render "shared/second-header" %>

<%= form_with model:@cat_post, url:cat_main_index_path, class:"cat_pic_post", local: true do |f| %> 
  <div class="cat_post_main">
    <div class="cat_post_header">
      <h2 class="cat_posting">投稿情報を入力</h2>
    </div>

      <label class="form-image">
        <div class="image-file">
          <span>画像を選択</span>
          <%= f.file_field :cat_image, class:"hidden" %>
        </div>
      </label>

      <div class="post-form-group">
        <div class='post-form-wrap'>
          <label class="post-form-text">タイトル</label>
        </div>
          <%= f.text_field :post_title, class:"post_title", id:"post_title", placeholder:"タイトル(30文字まで)", maxlength:"30" %>
      </div>

      <div class="post-form-group">
        <div class='post-form-wrap'>
          <label class="post-form-text">メッセージ</label>
        </div>
        <%= f.text_area :post_text, class:"post_message", id:"post_message", placeholder:"タイトル(222文字まで)", maxlength:"222" %>
      </div>

      <%= f.submit "投稿する" ,class:"form-submit" %>
    </div>
<% end %> 

<%= render "shared/second-footer" %>